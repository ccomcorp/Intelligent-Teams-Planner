# Service Configuration
SERVICE_NAME=rag-service
PORT=7120
HOST=0.0.0.0
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=postgresql+asyncpg://itp_user:itp_password_2024@localhost:5432/intelligent_teams_planner
VECTOR_DIMENSION=768

# Redis Configuration
REDIS_URL=redis://:redis_password_2024@localhost:6379/0
REDIS_TTL=3600

# Document Processing
MAX_FILE_SIZE_MB=100
SUPPORTED_FORMATS=pdf,docx,pptx,txt,jpg,png
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Embeddings Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DEVICE=cpu
BATCH_SIZE=32

# OCR Configuration
TESSERACT_ENABLED=true
TESSERACT_LANGUAGE=eng
OCR_CONFIDENCE_THRESHOLD=0.7

# Document Sources
OPENWEBUI_ENABLED=true
TEAMS_ENABLED=true
PLANNER_ENABLED=true
SHAREPOINT_ENABLED=false

# Microsoft Graph API (for Teams/Planner integration)
MICROSOFT_CLIENT_ID=your-client-id
MICROSOFT_CLIENT_SECRET=your-client-secret
MICROSOFT_TENANT_ID=your-tenant-id

# MCP Server Integration
MCP_SERVER_URL=http://localhost:7100

# Monitoring
HEALTH_CHECK_INTERVAL=60
METRICS_ENABLED=true

# Storage Paths
TEMP_UPLOAD_DIR=/tmp/rag-uploads
PROCESSED_DOCS_DIR=/data/processed
