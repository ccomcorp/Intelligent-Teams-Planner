{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
  "manifestVersion": "1.16",
  "version": "2.0.0",
  "id": "{{TEAMS_APP_ID}}",
  "packageName": "com.intelligentteamsplanner.bot",
  "developer": {
    "name": "Intelligent Teams Planner",
    "websiteUrl": "https://github.com/your-org/intelligent-teams-planner",
    "privacyUrl": "https://github.com/your-org/intelligent-teams-planner/blob/main/PRIVACY.md",
    "termsOfUseUrl": "https://github.com/your-org/intelligent-teams-planner/blob/main/TERMS.md"
  },
  "icons": {
    "color": "color-icon.png",
    "outline": "outline-icon.png"
  },
  "name": {
    "short": "Planner Assistant",
    "full": "Intelligent Teams Planner Assistant"
  },
  "description": {
    "short": "AI assistant for Microsoft Planner management",
    "full": "Natural language interface for managing Microsoft Planner tasks, plans, and team collaboration through conversational AI."
  },
  "accentColor": "#0078D4",
  "bots": [
    {
      "botId": "{{BOT_ID}}",
      "scopes": [
        "personal",
        "team",
        "groupchat"
      ],
      "commandLists": [
        {
          "scopes": [
            "personal",
            "team",
            "groupchat"
          ],
          "commands": [
            {
              "title": "help",
              "description": "Get help with Planner commands"
            },
            {
              "title": "reset",
              "description": "Reset conversation context"
            }
          ]
        }
      ],
      "isNotificationOnly": false,
      "supportsCalling": false,
      "supportsVideo": false
    }
  ],
  "permissions": [
    "identity",
    "messageTeamMembers"
  ],
  "validDomains": [
    "your-domain.com"
  ],
  "webApplicationInfo": {
    "id": "{{BOT_ID}}",
    "resource": "https://graph.microsoft.com/"
  }
}