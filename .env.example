# Intelligent Teams Planner v2.0 - Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_PASSWORD=itp_password_2024
DATABASE_URL=postgresql://itp_user:itp_password_2024@localhost:5432/intelligent_teams_planner

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_PASSWORD=redis_password_2024
REDIS_URL=redis://:redis_password_2024@localhost:6379

# =============================================================================
# MICROSOFT GRAPH API CONFIGURATION
# =============================================================================
# Register your app at https://portal.azure.com/#view/Microsoft_AAD_RegisteredApps
MICROSOFT_CLIENT_ID=your-client-id-here
MICROSOFT_CLIENT_SECRET=your-client-secret-here
MICROSOFT_TENANT_ID=your-tenant-id-here

# Legacy/Alternative variable names (for compatibility)
AZURE_CLIENT_ID=your-client-id-here
AZURE_CLIENT_SECRET=your-client-secret-here
AZURE_TENANT_ID=your-tenant-id-here

# Microsoft Graph API Scopes (required for Planner access)
MICROSOFT_SCOPES=https://graph.microsoft.com/Group.Read.All,https://graph.microsoft.com/Tasks.ReadWrite

# =============================================================================
# TEAMS BOT CONFIGURATION
# =============================================================================
# Register your bot at https://dev.botframework.com/
BOT_ID=your-bot-id-here
BOT_PASSWORD=your-bot-password-here
TEAMS_APP_ID=your-teams-app-id-here

# =============================================================================
# OPENWEBUI CONFIGURATION
# =============================================================================
WEBUI_SECRET_KEY=your-32-character-secret-key-here
OPENWEBUI_API_KEY=your-openwebui-api-key-here

# OpenAI API Configuration (for embeddings and fallback)
OPENAI_API_KEY=your-openai-api-key-here

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Generate a 32-character encryption key for token storage
ENCRYPTION_KEY=your-32-character-encryption-key

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRATION=3600

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Log levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Rate limiting configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Token cache TTL (seconds)
TOKEN_CACHE_TTL=3600

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Set to 'development' for development mode
ENVIRONMENT=production

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================
# Enable detailed logging
ENABLE_DEBUG_LOGGING=false

# Metrics collection
ENABLE_METRICS=true
METRICS_PORT=9090

